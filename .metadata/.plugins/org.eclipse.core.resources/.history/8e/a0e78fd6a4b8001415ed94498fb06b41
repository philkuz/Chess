package pieces;
import java.util.ArrayList;

import chess.Piece;

public class Pawn extends Piece{
	
	//should only be 1 or -1, if it is 0, it means it hasn't been initialized. 
	public int direction = 0 ;
	public Pawn(int x, int y, int type) {
		super(x, y, type);
		if (type == 0)
